<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="android:Theme.Holo.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="edadTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/edadActionBar2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:actionBarSize">60dp</item>
        <item name="android:windowBackground">@color/edadBackground</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
    </style>

    <style name="edadTheme2" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/edadActionBar</item>
        <item name="android:windowBackground">@color/edadBackground</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:actionBarSize">60dp</item>
    </style>

    <style name="edadActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#2E509F</item>
        <item name="android:titleTextStyle">@style/textStyle</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:logo">@drawable/logo</item>
    </style>

    <style name="edadActionBar2" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">#2E509F</item>
        <item name="android:titleTextStyle">@style/textStyle</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="textStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
