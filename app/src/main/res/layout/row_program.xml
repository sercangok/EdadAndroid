<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.salyangoz.edad.view.TextView300
            android:id="@+id/txtSaat"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:textColor="@color/edadFontColor"
            android:text="10:00"
            android:layout_weight="2"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center" />


        <LinearLayout
            android:id="@+id/lnrTextPanel"
            android:orientation="vertical"
            android:layout_height="80dp"
            android:layout_width="0dp"
            android:layout_weight="3">

            <com.salyangoz.edad.view.TextView500
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/edadFontColor"
                android:text="10:00"
                android:textSize="12sp"
                android:layout_weight="1.5"
                android:gravity="center|left|bottom"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:layout_gravity="center" />

            <com.salyangoz.edad.view.TextView300
                android:padding="5dp"
                android:id="@+id/txtAcÄ±klama"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/edadFontColor"
                android:text="10:00"
                android:textSize="12sp"
                android:layout_weight="2"
                android:gravity="center|left|top"
                android:layout_gravity="center" />
        </LinearLayout>

        <com.salyangoz.edad.view.TextView500
            android:id="@+id/txtTitle2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:textColor="@color/edadFontColor"
            android:text="10:00"
            android:textSize="12sp"
            android:gravity="center|left"
            android:layout_weight="3"
            android:visibility="gone"
            android:layout_gravity="center" />

        <FrameLayout
            android:layout_margin="1dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageButton
                android:padding="2dp"
                android:id="@+id/imgTakvimeEkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selected"
                android:src="@drawable/takvimeeklebutton"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />
</LinearLayout>