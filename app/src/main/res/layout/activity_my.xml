<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity"
    android:weightSum="6"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5.5"
        android:layout_weight="4.5">

        <FrameLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:id="@+id/frmKongre"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/selected"
            android:onClick="onClick_Kongre">

            <ProgressBar
                android:id="@+id/prgKongre"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:visibility="gone" />

            <ImageView
                android:padding="3dp"
                android:id="@+id/imgKongre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <com.example.sercangok.edad.view.TextView700
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="KONGRE"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/frmEtkinlik"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/selected"
            android:onClick="onClick_Etkinliklerimiz">

            <ImageView
                android:id="@+id/imgEtkinliklerimiz"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <com.example.sercangok.edad.view.TextView500
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="ETKİNLİKLERİMİZ"
                android:layout_gravity="center|bottom"
                android:shadowColor="@android:color/black"
                android:shadowRadius="10"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/frmUyelik"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/selected"
            android:onClick="onClick_Uyelik">

            <ImageView
                android:id="@+id/imgUyelik"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <com.example.sercangok.edad.view.TextView500
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="ÜYELİK"
                android:shadowColor="@android:color/black"
                android:shadowRadius="10"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent" />
        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/frmHakkimizda"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/selected"
            android:onClick="onClick_Hakkimizda">


            <ImageView
                android:id="@+id/imgHakkimizda"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <com.example.sercangok.edad.view.TextView500
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="HAKKIMIZDA"
                android:layout_gravity="center|bottom"
                android:shadowColor="@android:color/black"
                android:shadowRadius="10"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:onClick="onClick_Kongre" />
        </FrameLayout>


        <FrameLayout
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/frmIletisim"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="center"
            android:background="@drawable/selected"
            android:onClick="onClick_Iletişim">

            <ImageView
                android:id="@+id/imgIletisim"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <com.example.sercangok.edad.view.TextView500
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="İLETİŞİM"
                android:shadowColor="@android:color/black"
                android:shadowRadius="10"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent" />
        </FrameLayout>

    </LinearLayout>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent">


        <ImageButton
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ipana"
            android:background="@android:color/transparent"
            android:onClick="onClick_Ipana" />

        <ImageButton
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/nobel"
            android:background="@android:color/transparent"
            android:onClick="onClick_Nobel" />

        <ImageButton
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/espe"
            android:background="@android:color/transparent"
            android:onClick="onClick_Espe" />

        <ImageButton
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/sirona"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:onClick="onClick_Sirona" />

        <ImageButton
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/botiss"
            android:background="@android:color/transparent"
            android:onClick="onClick_Botis" />
    </TableRow>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:background="@color/edadmaincolor">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="10dp"
            android:onClick="onClick_KayitOl">


            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/logo"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp" />


            <com.example.sercangok.edad.view.TextView700
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Üye "
                android:textSize="16sp"
                android:textColor="@color/edadRedFontColor" />

            <com.example.sercangok.edad.view.TextView700
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="olmak "
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <com.example.sercangok.edad.view.TextView700
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="için tıklayın"
                android:textSize="16sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>